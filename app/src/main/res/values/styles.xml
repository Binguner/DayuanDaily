<resources>

    <style name="appWelcome" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="myAppTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#00bcd4</item>
    </style>
    <style name="myAppTheme.login" parent="myAppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorToolbar</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="windowActionBar">false</item>

    </style>


    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="myCheckboxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

</resources>
